pipeline {
    agent any

    environment {
        PYTHON_HOME = 'C:\\Program Files\\Python312'  // Update this path to your Python installation
        MONGOSH_HOME = 'C:\\Program Files\\MongoDB\\mongosh\\bin'  // Update this path
        PATH = "${PYTHON_HOME};${MONGOSH_HOME};${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code...'
                git branch: 'master', url: 'https://github.com/Mohit554411/automate_query_execution_python'
            }
        }

        stage('Detect New Queries') {
    steps {
        script {
            echo 'Detecting new queries...'

            // Get newly added query files (files in Queries/ that changed in the last commit)
            def newQueries = bat(script: 'git diff --name-only HEAD~1 HEAD | findstr "Queries/"', returnStdout: true).trim()
             echo "New Queries Detected:\n${newQueries}"
            if (newQueries) {
                writeFile file: 'scripts/new_queries.txt', text: newQueries
                echo "✅ New Queries Detected:\n${newQueries}"
            } else {
                error '❌ No new queries detected. Skipping execution.'
            }
        }
    }
}


        stage('Execute Queries') {
            steps {
                echo 'Executing queries...'
                bat 'python scripts/execute_queries.py'
            }
        }

        stage('Cleanup') {
            steps {
                echo 'Cleaning up...'
                writeFile file: 'scripts/new_queries.txt', text: ''
            }
        }
    }
}
